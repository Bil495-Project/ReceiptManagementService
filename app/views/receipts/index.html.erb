<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Total cost</th>
      <th>Tax</th>
      <th>Image</th>
      <th>Receipt owner</th>
      <th>Receipt tag</th>
      <th>Fatura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.location %></td>
        <td><%= receipt.date %></td>
        <td><%= receipt.total_cost %></td>
        <td><%= receipt.tax %></td>
        <td><%= receipt.image %></td>
        <td><%= receipt.receipt_owner %></td>
        <td><%= receipt.receipt_tag_id %></td>
        <td><%= receipt.fatura_id %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

