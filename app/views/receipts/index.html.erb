<p id="notice"><%= notice %></p>

<h1>Receipts</h1>
<h2><strong>Search for receipts:</strong></h2>

<%= form_tag(receipts_path,method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag 'Search..', name: nil  %>
<% end %>

<table id=" receipts">
  <thead>
    <tr>
      <style>
        th {
          background-color: gray;
          color: white;
          font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        }
        </style>
      <th>Location</th>
      <th>Date</th>
      <th>Total cost</th>
      <th>Tax</th>
      <!--<th>Image</th> -->
      <th>Receipt owner</th>
      <th>Receipt tag</th>
      <th>Receipt_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
  </style>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.location %></td>
        <td><%= receipt.date %></td>
        <td><%= receipt.total_cost %></td>
        <td><%= receipt.tax %></td>
       <!-- <td><%= receipt.image %></td> -->
        <td><%= receipt.receipt_owner %></td>
        <td><%= receipt.receipt_tag_id %></td>
        <td><%= receipt.fatura_id %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
